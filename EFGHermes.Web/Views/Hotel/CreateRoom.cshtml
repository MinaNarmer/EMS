@model EFGHermes.BL.Dtos.CreateRoomDto

<h4>CreateRoomDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Available Time From</label>
                <input asp-for="SlotDateFrom" class="form-control" />
                <span asp-validation-for="SlotDateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Available Time To</label>
                <input asp-for="SlotDateTo" class="form-control required" />
                <span asp-validation-for="SlotDateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

